{
  "name": "scaffoldor-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:registry": "bun run scripts/build-registry.ts",
    "build:all": "bun run build:registry && turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "motion": "^12.23.27"
  }
}
